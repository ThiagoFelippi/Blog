{{#each postagens}}
<div class="card mt-3">
    <div class="card-body">
       
        <h3> {{titulo}} </h3>
        <p> {{descricao}} </p>
        <a href="/postagem/{{slug}}"> <button class="btn btn-primary"> Leia mais </button> </a> 
        <hr>
         <small>Data de Publicação: {{data}}</small>
    </div>
</div>

{{else}}
    <h3>Nenhuma postagem cadastrada nessa categoria</h3>
{{/each}}