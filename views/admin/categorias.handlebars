<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"> <button class="btn btn-success">Nova categoria</button> </a>

{{#each categorias}}
    <div class="card mt-3 d-flex flex-column ">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <hr>
            <small>{{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}" > <button class="btn btn-success align-self-end w-25 mt-2">Editar categoria</button> </a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value={{_id}}>
                <button type="submit" class="btn btn-danger mt-3"> Deletar categoria </button>
            </form>
        </div>
    </div>
{{else}}

    <h1 class="mt-3">Nenhuma categoria listada</h1>

{{/each}}