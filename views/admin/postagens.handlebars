<h2>Lista de postagem:</h2>
<hr>
<a href="/admin/postagens/add"> <button class="btn btn-success">Nova Postagem</button> </a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <hr>
            <p>{{conteudo}}</p>
            <hr>
            <small>Categoria: {{categoria}}</small> <br>
            <small>Data: {{data}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"> <button class="btn btn-success mt-3"> Editar postagem </button> </a> <br>
            <a href="/admin/postagens/remover/{{_id}}"> <button class="btn btn-danger mt-3">Deletar postagem </button> </a>
        </div>
    </div>
{{else}}
    <h4>Nenhuma postagem registrada</h4>
{{/each}}